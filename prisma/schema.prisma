generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Usuario {
  id      Int      @id @default(autoincrement())
  nombre   String
  correo  String   @unique
estado estado @default(activo)
}

model Pedido {
  id          Int      @id @default(autoincrement())
  fecha       DateTime
  total       Float
estado estado @default(activo)
}

model Producto {
  id         Int      @id @default(autoincrement())
  nombre     String
  descripcion String
  precio     Float
  categoria  String
  estado estado @default(activo)
}
enum estado{
  activo
  pendiente
  eliminado
}
